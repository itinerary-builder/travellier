    <%= simple_form_for(@itinerary) do |f| %>
      <h2>Create Itinerary</h2>
      <%= f.input :title, input_html: { placeholder: "Trip title" }, label: false %>
      <%= f.input :duration, input_html: { placeholder: "Number of days" }, label: false %>
      <%= f.input :city, input_html: { placeholder: "Your ideal city" }, label: false %>
      <%= f.button :submit, 'Edit',  class: "btn btn-primary" %>
    <% end %>

