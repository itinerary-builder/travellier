<%= simple_form_for(@itinerary) do |f| %>
  <div class="d-flex justify-content-center">
    <div class="home-number-small mr-3">1</div>
    <h2>Create Itinerary</h2>
  </div>
  <%= f.input :title, input_html: { placeholder: "Trip title" }, label: false %>
  <%= f.input :duration, input_html: { placeholder: "Number of days" }, label: false %>
  <%= f.input :city, collection: ["Lisbon", "Porto", "Algarve", "Evora", "Caimbra"], prompt: 'Your ideal city', label: false %>
  <%= f.button :submit, 'Create Itinerary',  class: "btn btn-primary" %>
<% end %>
